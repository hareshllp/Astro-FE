---
// Accepts `slides` array as a prop
const { slides } = Astro.props;
---

<div class="slider-container">
  {slides.map((slide: { title: unknown; description: unknown; }) => (
    <div class="slide" >
      <h3 class="text-2xl font-bold">{slide.title}</h3>
      <p>{slide.description}</p>
    </div>
  ))}
</div>
